<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :phone1 %>
  <%= f.input :phone2 %>
  <%= f.input :address %>
  <%= f.input :email %>
  <% if @user.new_record? %>
    <%= f.input :password %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
