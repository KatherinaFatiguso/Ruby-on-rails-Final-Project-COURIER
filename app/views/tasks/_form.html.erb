
    <%= simple_form_for [@task] do |f| %>
      <%= f.association :user, collection: User.all %>
      <%= f.association :customer, collection: Customer.all %>
      <%= f.input :sender %>
      <%= f.input :from_address %>
      <%= f.input :receiver %>
      <%= f.input :to_address %>
      <%= f.input :urgency, collection: 1..3, prompt: 'Basic - 1' %>
      <%= f.input :info %>
      <%= f.input :sign_required? %>
      <%= f.input :signed? %>
      <%= f.input :item_count %>
      <%= f.submit %>
    <% end %>
