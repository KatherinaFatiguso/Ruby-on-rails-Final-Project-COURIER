<h2>Tasks List - Status: New</h2>
<ul>
  <% @tasks.new_task.each do |task|  %>
  <li>ID: <%= task.id %></li>
  <% end %>
</ul>

<h2>Tasks List - Status: Incomplete</h2>
<ul>
  <% @tasks.incomplete.each do |task|  %>
  <li>ID: <%= task.id %></li>
  <% end %>
</ul>

<h2>Tasks List - Status: Completed</h2>
<ul>
  <% @tasks.completed.each do |task|  %>
  <li>ID: <%= task.id %></li>
  <% end %>
</ul>

<% if (current_user.has_role? :admin) %>
  <h2>Tasks List - Status: Archived</h2>
  <ul>
    <% @tasks.archived.each do |task|  %>
    <li>ID: <%= task.id %></li>
    <% end %>
  </ul>
<% end %>
